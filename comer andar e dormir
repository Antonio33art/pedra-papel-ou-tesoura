class Pessoa:
    def __init__(self, nome):
        self.nome = nome

    def comer(self):
        print(f'{self.nome} está comendo.')

    def andar(self):
        print(f'{self.nome} está andando.')

    def dormir(self):
        print(f'{self.nome} está tirando um ronco.')

pessoa = Pessoa('tonho')

pessoa.comer()
pessoa.andar()
pessoa.dormir()
